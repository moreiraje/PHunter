<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homebackground"
    tools:context=".StartUpScreen">

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/info"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:onClick="toCredits"

        />

    <ImageView
        android:id="@+id/applogolarge"
        android:layout_width="198dp"
        android:layout_height="111dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/vculogo"
        android:layout_marginTop="-15dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="@string/MyHunts"
        app:srcCompat="@drawable/logo_color" />

    <ImageView
        android:id="@+id/vculogo"
        android:layout_width="165dp"
        android:layout_height="90dp"
        android:contentDescription="VCUlogo"
        android:background="@drawable/vculogo"
        android:layout_centerInParent="true"
        />

    <ImageView
        android:id="@+id/continuehunt"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_below="@+id/applogolarge"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/button_yellow" />
    <ImageView
        android:id="@+id/newhunt"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_below="@+id/continuehunt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/button_yellow" />

    <TextView
        android:id="@+id/newhunttext"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/newhunt"
        android:layout_alignEnd="@+id/newhunt"
        android:layout_alignStart="@+id/newhunt"
        android:layout_alignTop="@+id/newhunt"
        android:textColor="#ffff"
        android:textAlignment="center"
        android:fontFamily="@font/rumble"
        android:onClick="newHunt"
        android:textSize="60sp"
        android:text="NEW HUNT" />

    <TextView
        android:id="@+id/continuetext"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/continuehunt"
        android:layout_alignTop="@+id/continuehunt"
        android:layout_alignEnd="@+id/continuehunt"
        android:layout_alignBottom="@+id/continuehunt"
        android:fontFamily="@font/rumble"
        android:onClick="continueHunt"
        android:text="CONTINUE"
        android:textAlignment="center"
        android:textColor="#ffff"
        android:textSize="60sp" />



</RelativeLayout>