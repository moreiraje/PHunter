<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileScreen"
    android:background="#084050">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/profilelarge"
        tools:layout_editor_absoluteX="83dp"
        />

    <ImageButton
        android:id="@+id/closebutton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/exit"
        android:contentDescription="@string/Back" />

    <ImageView
        android:id="@+id/userinfo"
        android:layout_width="325dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="110dp"
        android:background="@drawable/planks"
        android:contentDescription="@string/ProfileAcc" />

    <TextView
    android:id="@+id/welcome"
    android:layout_width="200dp"
    android:layout_height="35dp"
    android:layout_alignTop="@+id/userinfo"
    android:layout_centerHorizontal="true"
    android:fontFamily="@font/rumble"
    android:text="AHOY, MATEY!"
    android:textAlignment="center"
    android:textSize="30sp"
    android:textColor="#ffff"/>

    <TextView
    android:id="@+id/username"
    android:layout_width="200dp"
    android:layout_height="50dp"
    android:layout_alignTop="@+id/userinfo"
    android:layout_marginTop="33dp"
    android:layout_centerHorizontal="true"
    android:fontFamily="@font/rumble"
    android:text="JAVIER"
    android:textAlignment="center"
    android:textSize="40sp"
    android:textColor="#ffff"/>

    <TextView
        android:id="@+id/statstitle"
        android:layout_width="200dp"
        android:layout_height="85dp"
        android:layout_alignBottom="@+id/userinfo"
        android:layout_marginBottom="-12dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/rumble"
        android:text="STATS"
        android:textAlignment="center"
        android:textSize="60sp"
        android:textColor="#ffff"/>



        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="479dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/openedchests"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="85dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/openedchests"
                />
            <ImageView
                android:id="@+id/distancetraveled"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="85dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/distance"
                />
            <ImageView
                android:id="@+id/fastestcapture"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="85dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/fastest"
                />
            <ImageView
                android:id="@+id/other"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="85dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/fastest"
                />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>