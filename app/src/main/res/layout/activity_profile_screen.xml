<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileScreen"
    android:background="#084050">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/profilelarge"
        tools:layout_editor_absoluteX="83dp"
        />

    <ImageButton
        android:id="@+id/closebutton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/exit"
        android:onClick="backpress"
        android:contentDescription="@string/Back" />

    <ImageView
        android:id="@+id/userinfo"
        android:layout_width="325dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="110dp"
        android:background="@drawable/planks"
        android:contentDescription="@string/ProfileAcc" />

    <EditText
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/statstitle"
        android:layout_below="@+id/welcome"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="-18dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="2dp"
        android:cursorVisible="false"
        android:background="@null"
        android:ems="10"
        android:fontFamily="@font/rumble"
        android:gravity="center"
        android:inputType="textPersonName"
        android:onClick="changeName"
        android:text="Name"
        android:textColor="#fff"
        android:textSize="50sp" />

    <TextView
    android:id="@+id/welcome"
    android:layout_width="200dp"
    android:layout_height="35dp"
    android:layout_alignTop="@+id/userinfo"
    android:layout_centerHorizontal="true"
    android:fontFamily="@font/rumble"
    android:text="AHOY, MATEY!"
    android:textAlignment="center"
    android:textSize="30sp"
    android:textColor="#ffff"/>

    <TextView
        android:id="@+id/statstitle"
        android:layout_width="200dp"
        android:layout_height="85dp"
        android:layout_alignBottom="@+id/userinfo"
        android:layout_marginBottom="-12dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/rumble"
        android:text="STATS"
        android:textAlignment="center"
        android:textSize="60sp"
        android:textColor="#ffff"/>
    <ImageView
        android:id="@+id/openedchests"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_below="@+id/statstitle"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/openedchests" />

    <ImageView
        android:id="@+id/openedchests2"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_below="@+id/openedchests"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/openedchests" />

    <TextView
        android:id="@+id/gStatsText"
        android:layout_width="274dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/openedchests"
        android:layout_alignTop="@+id/openedchests"
        android:layout_alignEnd="@+id/openedchests"
        android:layout_alignBottom="@+id/openedchests"
        android:layout_marginStart="109dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="10dp"
        android:text="Total Gold Found"
        android:textColor="#ffff"/>

    <TextView
        android:id="@+id/goldStats"
        android:layout_width="274dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/openedchests"
        android:layout_alignTop="@+id/openedchests"
        android:layout_alignEnd="@+id/openedchests"
        android:layout_alignBottom="@+id/openedchests"
        android:layout_marginStart="111dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="-4dp"
        android:fontFamily="@font/rumble"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:textColor="#ffff"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/cStatsText"
        android:layout_width="274dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/openedchests"
        android:layout_alignTop="@+id/openedchests2"
        android:layout_alignEnd="@+id/openedchests"
        android:layout_alignBottom="@+id/openedchests2"
        android:layout_marginStart="110dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="11dp"
        android:text="Total Chests Found"
        android:textColor="#ffff"/>

    <TextView
        android:id="@+id/chestStats"
        android:layout_width="274dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/openedchests"
        android:layout_alignTop="@+id/openedchests2"
        android:layout_alignEnd="@+id/openedchests"
        android:layout_alignBottom="@+id/openedchests2"
        android:layout_marginStart="111dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="-7dp"
        android:fontFamily="@font/rumble"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:textColor="#ffff"
        android:textSize="60sp" />

</RelativeLayout>