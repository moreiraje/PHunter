<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".MyHunts">


    <TextView
        android:id="@+id/ABOUT"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/rumble"
        android:layout_marginTop="70dp"
        android:text="ABOUT THIS APP"
        android:textAlignment="center"
        android:textColor="#ffff"
        android:textSize="45dp" />

    <TextView

        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_below="@+id/ABOUT"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:fontFamily="@font/rumble"
        android:text="VCU TREASURE HUNTER IS AN APP DEVELOPED BY STUDENTS FROM VIRGINIA COMMONWEALTH UNIVERSITY
WITH THE INTENT OF HELPING FRESHMAN STUDENTS TO LEARN MORE ABOUT SOME IMPORTANT LOCATIONS AROUND VCU'S CAMPUS. THE APP IS A
PIRATE THEMED SCAVENGER HUNT APP WHERE THE MAIN OBJECTIVE IS TO HUNT TREASURE CHESTS LOCATED AROUND THE MCV CAMPUS."
        android:textColor="#fff"
        android:textSize="18dp"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:fontFamily="@font/rumble"
        android:textColor="#fff"
        android:textSize="45dp"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:text="CREDITS" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/rumble"
        android:text="THIS APP WAS CREATED AS AN EDUCATIONAL ASSIGNMENT AND NO MONETARY PROFIT WILL BE EARNED WITH THIS APP.
ALL COPYRIGHTS ARE OWNED BY THE CREATORS OF THE RESOURCES USED IN THIS APPLICATION."
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="140dp"
        android:fontFamily="@font/rumble"
        android:textColor="#fff"
        android:textSize="20dp"
        android:text="CREATED BY TEAM VILLAGE SPILLAGE" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="59dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="5dp"
        android:contentDescription="@string/Back"
        android:onClick="backPress"
        android:background="@drawable/backarrow"/>

</RelativeLayout>

